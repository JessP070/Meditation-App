<h3> Please Write A Review </h3>

<%= form_for(@review) do |f|%>
  <% if params[:meditation_id] %>
    <%= f.hidden_field :meditation_id %>
  <% else %>
    <div>
      <%= f.label :meditation_id, "Select a Meditation" %>
      <br>
    <%= f.collection_select :meditation_id, Meditation.all, :description, :mood, include_blank: 'Select One' %>
    </div>
  <% end %>
  <div>
    <%= f.label :stars %>
    <%= f.number_field :stars %>
  </div>
  <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
   <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "30x4" %>
  </div>
  <%= f.hidden_field :meditation_id %>
  
  <%= f.submit %>
<% end %>