<%= render partial: 'layouts/errors' , locals: {object: @meditation} %>
<%= form_for(@meditation) do |f| %>
<div>
<%= f.label :duration  %>
<%= f.text_field :duration %>
</div>
<br>
<div class="form-group">
Current <%= f.label :Mood %>
<%= f.text_field :mood %>
</div>
<br>
<p> Select a Technique that already exists</p>
<div class="form-group"> 
<%= f.collection_select :technique_id, Technique.all, :id, :name, include_blank: 'Select One' %>
</div>
<br>
<p>Or create a new Technique: </p>
<div class="form-group">
<%= f.fields_for :technique, Technique.new do |p|%>
<%= p.label :name %>
<%= p.text_field :name %>
<%= p.label :description %>
<%= p.text_field :description %>
<% end %>
<br>
</div>
<br>
<%= f.submit %>
<% end %>