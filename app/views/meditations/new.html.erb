<h1>Create A New Meditation</h1>

<%= form_for(@meditation) do |f|%>
<div>
<%= f.label :duration %>
<%= f.text_field :duration %>
</div>
<div>
<%= f.label :mood %>
<%= f.text_field :mood %>
</div>

<p> Select a technique that already exists: </p>

<div>
<%= f.collection_select :technique_id, Technique.all, :id, :name, include_blank: 'Select One' %>
</div>


<p> Or create a new technique </p>

<div>
<%= f.fields_for :technique do |t| %>
    <%= t.label :name %>
    <%= t.text_field :name %>
     <%= t.label :description %>
    <%= t.text_field :description %>

<% end %>
</div>
<br></br>
<%= f.submit %>
<% end %>
